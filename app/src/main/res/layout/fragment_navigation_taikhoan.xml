<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#DDDDDD"
    tools:context=".bottomNavigation.Taikhoan">

    <RelativeLayout

        android:layout_width="match_parent"

        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@color/colorPrimaryDark"
            android:layout_alignParentTop="true">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="40dp"
                android:src="@drawable/person"
                android:layout_centerVertical="true"
                android:background="@drawable/circle_white_border"
                android:layout_marginLeft="15dp"
                android:layout_height="40dp"
                 />

            <TextView
                android:id="@+id/textView"
                android:layout_toRightOf="@id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Đăng nhập"
                android:layout_marginLeft="20dp"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />





        </RelativeLayout>

        <!-- Content below header and above footer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@id/header"
            android:layout_marginTop="7dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/star"
                android:gravity="left|center"
                android:padding="10dp"
                android:background="#FFFFFF"
                android:drawablePadding="15dp"
                android:text="The Coffee House Rewards"
                android:textColor="#000"
                android:textSize="16dp" />
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/person"
                android:gravity="left|center"
                android:padding="10dp"
                android:background="#FFFFFF"
                android:textColor="#000"
                android:drawablePadding="15dp"
                android:text="Thông tin tài khoản"
                android:textSize="16dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/music"
                android:gravity="left|center"
                android:padding="10dp"
                android:background="#FFFFFF"
                android:textColor="#000"
                android:drawablePadding="15dp"
                android:text="Nhạc đang phát"
                android:textSize="16dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/history"
                android:gravity="left|center"
                android:padding="10dp"
                android:background="#FFFFFF"
                android:textColor="#000"
                android:drawablePadding="15dp"
                android:text="Lịch sử"
                android:textSize="16dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/help"
                android:background="#FFFFFF"
                android:gravity="left|center"
                android:padding="10dp"
                android:textColor="#000"
                android:drawablePadding="15dp"
                android:text="Giúp đỡ"
                android:textSize="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/setting"
                android:gravity="left|center"
                android:padding="10dp"
                android:background="#FFFFFF"
                android:textColor="#000"
                android:drawablePadding="15dp"
                android:text="Cài đặt"
                android:textSize="16dp" />
          

            

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>